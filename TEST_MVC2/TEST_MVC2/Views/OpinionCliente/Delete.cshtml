@model TDDTestingMVC1.Models.OpinionCliente

<h2>Eliminar Opinión</h2>

<h3>¿Estás seguro de que quieres eliminar esta opinión?</h3>
<div>
    <h4>Opinión</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>ID</dt>
        <dd>@Model.OpinionID</dd>
        <dt>Cliente ID</dt>
        <dd>@Model.ClienteID</dd>
        <dt>Producto ID</dt>
        <dd>@Model.ProductoID</dd>
        <dt>Calificación</dt>
        <dd>@Model.Calificacion</dd>
        <dt>Comentario</dt>
        <dd>@Model.Comentario</dd>
        <dt>Fecha</dt>
        <dd>@Model.Fecha.ToShortDateString()</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="OpinionID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>