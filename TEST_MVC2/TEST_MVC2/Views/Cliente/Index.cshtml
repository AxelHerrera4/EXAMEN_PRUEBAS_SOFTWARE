@model IEnumerable<TEST_MVC2.Models.Cliente>
@{
    ViewData["Title"] = "Cliente";
}

<h1>Index</h1>

<div class="container mt-4">
    <h2>Clientes</h2>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Codigo)</th>
                    <th>@Html.DisplayNameFor(model => model.Apellidos)</th>
                    <th>@Html.DisplayNameFor(model => model.Nombres)</th>
                    <th>@Html.DisplayNameFor(model => model.FechaNacimiento)</th>
                    <th>@Html.DisplayNameFor(model => model.Mail)</th>
                    <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                    <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                    <th>@Html.DisplayNameFor(model => model.Estado)</th>
                    <th>Acciones</th> <!-- Nueva columna -->
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Codigo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Apellidos)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nombres)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaNacimiento)</td>
                        <td>@Html.DisplayFor(modelItem => item.Mail)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                        <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                        <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                        <td>
                            <!-- Botón Editar -->
                            <a href="@Url.Action("Edit", "Cliente", new { id = item.Codigo })" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <!-- Botón Eliminar -->
                            <form action="@Url.Action("Delete", "Cliente")" method="post" style="display:inline;"
                                  onsubmit="return confirm('¿Seguro que deseas eliminar este cliente?');">
                                <input type="hidden" name="id" value="@item.Codigo" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Botón para agregar nuevo usuario -->
    <div class="text-end mt-3">
        <a href="@Url.Action("Create", "Cliente")" class="btn btn-primary">
            <i class="bi bi-person-plus"></i> Agregar Usuario
        </a>
    </div>
</div>
